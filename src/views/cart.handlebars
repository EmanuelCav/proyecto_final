{{#if_eq cart.products.length 0}}
<p class="not_products">There are not products on cart</p>
<a href="/products">Show products</a>
{{/if_eq}}

<div class="container-products" id="container-cart">

    {{#each cart.products}}
    <div class="product">
        <div class="contain-title">
            <p class="product-title">{{this.product.title}}</p>
            <p class="product-description">{{this.product.description}}</p>
        </div>
        <div class="contain-price">
            <p class="product-price">${{this.product.price}}</p>
            <p class="product-stock ">unidades: {{this.product.stock}}</p>
        </div>
    </div>
    {{/each}}

</div>

<script src="/js/products.js"></script>